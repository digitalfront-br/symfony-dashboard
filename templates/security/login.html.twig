{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="uk-height-viewport uk-flex uk-flex-middle uk-flex-center">
		{% if app.user %}
			<div class="mb-3">
				Logado com o email
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Sair</a>
			</div>
		{% else %}
			<div
				class="uk-width-medium uk-padding-small">
				<!-- login -->
				<form method="post">

					<div class="uk-margin uk-text-center">
						<img style="width: 80px;" src="/assets/img/dfront-icon.svg" alt="">
						{% if error %}
							<div class="uk-alert-danger" uk-alert>
								<a class="uk-alert-close" uk-close></a>
								<p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
							</div>
						{% endif %}
					</div>
					<fieldset class="uk-fieldset">
						<div class="uk-margin-small">
							<div class="uk-inline uk-width-1-1">
								<span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: user"></span>
								<input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="uk-input uk-border-rounded" required autofocus>
							</div>
						</div>
						<div class="uk-margin-small">
							<div class="uk-inline uk-width-1-1">
								<span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: lock"></span>
								<input type="password" placeholder="Senha" name="password" id="inputPassword" class="uk-input uk-border-rounded" required>

								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							</div>
						</div>
						<div class="checkbox mb-3">
							<label>
								<input type="checkbox" name="_remember_me">
								Lembrar-me
							</label>
						</div>
						<div class="uk-margin-bottom">
							<button type="submit" class="uk-button uk-button-primary uk-width-1-1">Entrar</button>
						</div>
					</fieldset>
				</form>
			</div>
		{% endif %}
	</div>
{% endblock %}
