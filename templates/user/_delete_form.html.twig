<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Você quer deletar o usuário {{ user.name }}?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
	<button class="uk-button uk-background-default uk-text-danger uk-button-small uk-padding-remove">
		<span uk-icon="icon: trash; ratio: 1.2"></span>
	</button>
</form>
